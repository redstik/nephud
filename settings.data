[BG:#EEEEEE]
Window();

[Border:0, FG:#000000]
Banner("7hud.png", "auto", "topleft");

[Name:HUD Position, Default:centered]
GlobalComboBox("HUDPosition", "HUD Position")
{
	centered
	lowered
}

[Name:Chat, Default:top]
